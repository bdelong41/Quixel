         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="confirmButton" layoutX="58.0" layoutY="104.0" mnemonicParsing="false" onAction="#confirm_button_listener" text="confirm" />
      <Button fx:id="cancelButton" layoutX="244.0" layoutY="104.0" mnemonicParsing="false" onAction="#cancel_button_listener" text="cancel" />
   </children>
</AnchorPane>
